script/source = "extends CharacterBody2D

const SPEED = 5000.0

@onready var animated_sprite = $AnimatedSprite2D
@onready var timer = $Timer
@onready var game = $\"..\"
const SPELL = preload(\"res://scenes/spell.tscn\")

var casting = false

func cast_spell():
	if not casting:
		casting = true
		animated_sprite.play(\"cast\")
		timer.start()
		
		var spell = SPELL.instantiate()
		spell.position = position
		game.add_child(spell)

func _on_timer_timeout():
	casting = false
	# Remove this line if you don't want to reload the scene after casting
	# get_tree().reload_current_scene()



func _input(event):
	if event.is_action_pressed(\"cast\"):
		print(\"Input received\")
		cast_spell()
		
func _physics_process(delta):
	# Get the input direction
	var direction = Vector2.ZERO
	
	# Get Input
	direction.x = Input.get_axis(\"move_left\", \"move_right\")
	direction.y = Input.get_axis(\"move_up\", \"move_down\")
	
	# Normalize the direction to prevent faster diagonal movement
	direction = direction.normalized()
	
	# Set the velocity
	if direction:
		velocity = direction * SPEED * delta
	else:
		# Stop the character when there's no input
		velocity = Vector2.ZERO
	
	# Animate the character
	if casting:
		pass
	elif velocity.y > 0:
		animated_sprite.play(\"run_down\")
	elif velocity.y < 0:
		animated_sprite.play(\"run_up\")
	elif velocity.x > 0:
		animated_sprite.play(\"run_right\")
	elif velocity.x < 0:
		animated_sprite.play(\"run_left\")
	else:
		animated_sprite.play(\"idle\")
		
	# Move the character
	move_and_slide()


func _on_animated_sprite_2d_animation_finished():
	if animated_sprite.animation == \"cast\":
		casting = false # Replace with function body.
"

